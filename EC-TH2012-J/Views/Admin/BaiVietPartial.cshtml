@using EC_TH2012_J.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<BaiViet>

<table class="table table-striped table-bordered bootstrap-datatable datatable responsive" id="tableID">
    <thead>
        <tr>
            <th>
                <input type="checkbox" onclick="toggle(this)" />
            </th>
            <th>@Html.DisplayNameFor(model => model.First().MaBV)</th>
            <th>@Html.DisplayNameFor(model => model.First().TieuDe)</th>
            <th>@Html.DisplayNameFor(model => model.First().Trang)</th>
            <th>@Html.DisplayNameFor(model => model.First().NgayTao)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name="lstdel" value="@item.MaBV" />
                </td>
                
                <td class="center">@item.MaBV</td>
                <td class="center">@item.TieuDe</td>
                <td class="center">@item.Trang1.TenTrang</td>
                <td class="center">@item.NgayTao</td>
                
                <td class="center">
                    <a class="btn btn-success" href='javascript:ChiTietItem("@Url.Action("BVDetail", "Admin")","@item.MaBV")'>
                        <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                        Chi tiết
                    </a>
                    <a class="btn btn-info" href="@Url.Action("EditBV", "Admin", new { id = item.MaBV })">
                        <i class="glyphicon glyphicon-edit icon-white"></i>
                        Sửa
                    </a>
                    <a class="btn btn-danger" href='javascript:XoaItem("@Url.Action("DeleteBV", "Admin")","@item.MaBV")'>
                        <i class="glyphicon glyphicon-trash icon-white"></i>
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-holder">
    <div class="row">
        <div class="col-xs-12 col-sm-6 text-left">
            <div id="nav_grid">
                @Html.PagedListPager(Model, page => Url.Action("TimBV", "Admin", new {key = @ViewBag.key, matrang = @ViewBag.matrang, page = page }))
            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="result-counter">
                Có tât cả <span>@Model.TotalItemCount</span> dòng
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 text-right">
            <a href="@Url.Action("ExportToExcel", "SanPham")" id="exportexcel">XLS</a>
        </div>
    </div><!-- /.row -->
    
</div><!-- /.pagination-holder -->

<div id="show-dialog-detail" style="display:none">
</div>
<script src="@Url.Content("~/js/html2canvas.js")"></script>
<script src="@Url.Content("~/js/jquery.base64.js")"></script>
<script src="@Url.Content("~/js/tableExport.js")"></script>
<script src="@Url.Content("~/js/jspdf/libs/sprintf.js")"></script>
<script src="@Url.Content("~/js/jspdf/libs/base64.js")"></script>
<script src="@Url.Content("~/js/jspdf/jspdf.js")"></script>
<script>
    $(document).ready(function () {
        
            $("#exportexcel").click(function (e) {
                
            });
        });

</script>