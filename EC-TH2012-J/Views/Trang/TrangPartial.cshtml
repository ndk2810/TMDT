@using EC_TH2012_J.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Trang>


<table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead>
        <tr>
            <th>
                <input type="checkbox" onclick="toggle(this)" />
            </th>
            <th>@Html.DisplayNameFor(model => model.First().TenTrang)</th>
            <th>@Html.DisplayNameFor(model => model.First().ThuTu)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name="lstdel" value="@item.MaTrang" />
                </td>
                <td class="center">@item.TenTrang</td>
                <td class="center">@item.ThuTu</td>
                <td class="center">
                    <a class="btn btn-info" href="@Url.Action("EditTrang", "Trang", new { id = item.MaTrang })">
                        <i class="glyphicon glyphicon-edit icon-white"></i>
                        Sửa
                    </a>
                    <a class="btn btn-danger" href='javascript:XoaItem("@Url.Action("DeleteTrang", "Trang")","@item.MaTrang")'>
                        <i class="glyphicon glyphicon-trash icon-white"></i>
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-holder">
    <div class="row">
        <div class="col-xs-12 col-sm-6 text-left">
            <div id="nav_grid">
                @Html.PagedListPager(Model, page => Url.Action("TimLoaiSP", "LoaiSP", new { key = @ViewBag.key, page = page }))
            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="result-counter">
                Có tât cả <span>@Model.TotalItemCount</span> dòng
            </div>
        </div>
    </div><!-- /.row -->
</div><!-- /.pagination-holder -->